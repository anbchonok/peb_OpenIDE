<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://applicationDetailView.title"
      focusComponent="form">
    <data>
        <instance id="applicationDc"
                  class="com.company.peb.entity.Application">
            <fetchPlan extends="_base"/>
            <loader id="applicationDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="applicationDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="applicationNumberField" property="applicationNumber"/>
            <select id="applicationCategoryField" property="applicationCategory"/>
            <textField id="ishField" property="ish"/>
            <datePicker id="ishDateField" property="ishDate"/>
            <textField id="incomingNumberField" property="incomingNumber"/>
            <datePicker id="incomingDateField" property="incomingDate"/>
            <textField id="customerField" property="customer"/>
            <textField id="workSummaryField" property="workSummary"/>
            <textField id="responseDeadlineField" property="responseDeadline"/>
            <textField id="noteField" property="note"/>
            <textField id="responseNumberField" property="responseNumber"/>
            <datePicker id="responseDateField" property="responseDate"/>
            <datePicker id="statusChangeDateField" property="statusChangeDate"/>
            <select id="statusField" property="status"/>

        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
