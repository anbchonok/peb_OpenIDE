<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://applicationListView.title"
      focusComponent="applicationsDataGrid">
    <data>
        <collection id="applicationsDc"
                    class="com.company.peb.entity.Application">
            <fetchPlan extends="_base"/>
            <loader id="applicationsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Application e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="applicationsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="applicationsDataGrid.createAction"/>
            <button id="editButton" action="applicationsDataGrid.editAction"/>
            <button id="removeButton" action="applicationsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="applicationsDl"/>
        </hbox>
        <dataGrid id="applicationsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="applicationsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="applicationNumber"/>
                <column property="applicationCategory"/>
                <column property="ish"/>
                <column property="ishDate"/>
                <column property="incomingNumber"/>
                <column property="incomingDate"/>
                <column property="customer"/>
                <column property="workSummary"/>
                <column property="responseDeadline"/>
                <column property="note"/>
                <column property="responseNumber"/>
                <column property="responseDate"/>
                <column property="status"/>
                <column property="statusChangeDate"/>

            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
