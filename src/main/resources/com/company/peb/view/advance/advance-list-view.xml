<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://advanceListView.title"
      focusComponent="advancesDataGrid">
    <data>
        <collection id="advancesDc"
                    class="com.company.peb.entity.Advance">
            <fetchPlan extends="_base">
                <property name="contractStage" fetchPlan="_base">
                    <property name="location" fetchPlan="_base"/>
                    <property name="customer" fetchPlan="_base"/>
                    <property name="contract" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="advancesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Advance e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="advancesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="advancesDataGrid.createAction"/>
            <button id="editButton" action="advancesDataGrid.editAction"/>
            <button id="removeButton" action="advancesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="advancesDl"/>
        </hbox>
        <dataGrid id="advancesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="advancesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="advancePrice"/>
                <column property="advanceDate"/>
                <column property="contractStage"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
