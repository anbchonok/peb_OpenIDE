<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://advanceDetailView.title"
      focusComponent="form">
    <data>
        <instance id="advanceDc"
                  class="com.company.peb.entity.Advance">
            <fetchPlan extends="_base">
                <property name="contractStage" fetchPlan="_base">
                    <property name="location" fetchPlan="_base"/>
                    <property name="customer" fetchPlan="_base"/>
                    <property name="contract" fetchPlan="_base"/>
                    <property name="user" fetchPlan="_base">
                        <property name="department" fetchPlan="_base"/>
                    </property>
                </property>
            </fetchPlan>
            <loader id="advanceDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="advanceDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="advancePriceField" property="advancePrice"/>
            <datePicker id="advanceDateField" property="advanceDate"/>
            <entityPicker id="contractStageField" property="contractStage">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
