<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://contractDetailView.title"
      focusComponent="form">
    <data>
        <instance id="contractDc"
                  class="com.company.peb.entity.Contract">
            <fetchPlan extends="_base">
                <property name="application" fetchPlan="_base"/>
                <property name="typeDeadline" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="contractDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="contractDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="contractNumberField" property="contractNumber"/>
            <datePicker id="contractDateField" property="contractDate"/>
            <textField id="contractThemeField" property="contractTheme"/>
            <entityPicker id="applicationField" property="application">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <datePicker id="startDateField" property="startDate"/>
            <datePicker id="endDateField" property="endDate"/>
            <textField id="deadlineField" property="deadline"/>
            <textField id="priceField" property="price"/>
            <textField id="fotGeneralField" property="fotGeneral"/>
            <textField id="fotOzpField" property="fotOzp"/>
            <textField id="prField" property="pr"/>
            <textField id="mField" property="m"/>
            <textField id="stoField" property="sto"/>
            <textField id="comField" property="com"/>
            <textField id="orderNumberField" property="orderNumber"/>
            <select id="ndsField" property="nds"/>
            <select id="priceTypeField" property="priceType"/>
            <select id="vpField" property="vp"/>
            <select id="generalCustomerField" property="generalCustomer"/>
            <entityPicker id="typeDeadlineField" property="typeDeadline">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <select id="accountTypeField" property="accountType"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
