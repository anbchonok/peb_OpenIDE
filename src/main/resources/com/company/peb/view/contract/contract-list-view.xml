<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://contractListView.title"
      focusComponent="contractsDataGrid">
    <data>
        <collection id="contractsDc"
                    class="com.company.peb.entity.Contract">
            <fetchPlan extends="_base">
                <property name="application" fetchPlan="_base"/>
                <property name="typeDeadline" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="contractsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Contract e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="contractsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="contractsDataGrid.createAction"/>
            <button id="editButton" action="contractsDataGrid.editAction"/>
            <button id="removeButton" action="contractsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="contractsDl"/>
        </hbox>
        <dataGrid id="contractsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="contractsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="contractNumber"/>
                <column property="contractDate"/>
                <column property="contractTheme"/>
                <column property="application"/>
                <column property="startDate"/>
                <column property="endDate"/>
                <column property="deadline"/>
                <column property="price"/>
                <column property="fotGeneral"/>
                <column property="fotOzp"/>
                <column property="pr"/>
                <column property="m"/>
                <column property="sto"/>
                <column property="com"/>
                <column property="orderNumber"/>
                <column property="nds"/>
                <column property="priceType"/>
                <column property="vp"/>
                <column property="generalCustomer"/>
                <column property="typeDeadline"/>
                <column property="accountType"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
