<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://contractStageListView.title"
      focusComponent="contractStagesDataGrid">
    <data>
        <collection id="contractStagesDc"
                    class="com.company.peb.entity.ContractStage">
            <fetchPlan extends="_base">
                <property name="location" fetchPlan="_base"/>
                <property name="customer" fetchPlan="_base"/>
                <property name="contract" fetchPlan="_base">
                    <property name="application" fetchPlan="_base"/>
                    <property name="typeDeadline" fetchPlan="_base"/>
                </property>
                <property name="user" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="contractStagesDl" readOnly="true">
                <query>
                    <![CDATA[select e from ContractStage e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="contractStagesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="contractStagesDataGrid.createAction"/>
            <button id="editButton" action="contractStagesDataGrid.editAction"/>
            <button id="removeButton" action="contractStagesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="contractStagesDl"/>
        </hbox>
        <dataGrid id="contractStagesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="contractStagesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="location"/>
                <column property="customer"/>
                <column property="contractStageNumber"/>
                <column property="contractStageDate"/>
                <column property="contract"/>
                <column property="fullPaymentPrice"/>
                <column property="fullPaymentDate"/>
                <column property="user"/>
                <column property="fotRemainder"/>
                <column property="comment"/>
                <column property="actsReceived"/>
                <column property="tzDate"/>
                <column property="tzAvailability"/>
                <column property="tzStatus"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
