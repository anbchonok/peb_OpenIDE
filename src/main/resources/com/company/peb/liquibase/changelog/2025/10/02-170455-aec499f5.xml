<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="peb">
        <createTable tableName="ADVANCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ADVANCE"/>
            </column>
            <column name="ADVANCE_PRICE" type="DECIMAL(19, 2)"/>
            <column name="ADVANCE_DATE" type="DATE"/>
            <column name="CONTRACT_STAGE_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="peb">
        <createTable tableName="CONTRACT_TYPE_DEADLINE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CONTRACT_TYPE_DEADLINE"/>
            </column>
            <column name="FIXED_DEADLINE" type="VARCHAR(255)"/>
            <column name="CONDITIONAL_DEADLINE" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="peb">
        <createTable tableName="COST_FOT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_COST_FOT"/>
            </column>
            <column name="MONTH_" type="INT"/>
            <column name="YEAR_" type="INT"/>
            <column name="SUM_" type="DECIMAL(19, 2)"/>
            <column name="CONTRACT_STAGE_ID" type="UUID"/>
            <column name="PAYMENT_TYPE" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="peb">
        <createTable tableName="CUSTOMER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CUSTOMER"/>
            </column>
            <column name="CUSTOMER_NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="peb">
        <createTable tableName="DEPARTMENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEPARTMENT"/>
            </column>
            <column name="DEPARTMENT_NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="peb">
        <createTable tableName="LOCATION">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_LOCATION"/>
            </column>
            <column name="LOCATION_NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="7" author="peb">
        <addColumn tableName="CONTRACT_STAGE">
            <column name="CUSTOMER_ID" type="UUID"/>
            <column name="LOCATION_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="8" author="peb">
        <addColumn tableName="USER_">
            <column name="DEPARTMENT_ID" type="UUID"/>
            <column name="POSITION_" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="9" author="peb">
        <addColumn tableName="CONTRACT">
            <column name="TYPE_DEADLINE_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="10" author="peb">
        <createIndex indexName="IDX_ADVANCE_CONTRACT_STAGE" tableName="ADVANCE">
            <column name="CONTRACT_STAGE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CONTRACT_STAGE_ID" baseTableName="ADVANCE"
                                 constraintName="FK_ADVANCE_ON_CONTRACT_STAGE" referencedColumnNames="ID"
                                 referencedTableName="CONTRACT_STAGE"/>
    </changeSet>
    <changeSet id="11" author="peb">
        <createIndex indexName="IDX_CONTRACT_STAGE_CUSTOMER" tableName="CONTRACT_STAGE">
            <column name="CUSTOMER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CUSTOMER_ID" baseTableName="CONTRACT_STAGE"
                                 constraintName="FK_CONTRACT_STAGE_ON_CUSTOMER" referencedColumnNames="ID"
                                 referencedTableName="CONTRACT_STAGE"/>
    </changeSet>
    <changeSet id="12" author="peb">
        <createIndex indexName="IDX_CONTRACT_STAGE_LOCATION" tableName="CONTRACT_STAGE">
            <column name="LOCATION_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="LOCATION_ID" baseTableName="CONTRACT_STAGE"
                                 constraintName="FK_CONTRACT_STAGE_ON_LOCATION" referencedColumnNames="ID"
                                 referencedTableName="LOCATION"/>
    </changeSet>
    <changeSet id="13" author="peb">
        <createIndex indexName="IDX_CONTRACT_TYPE_DEADLINE" tableName="CONTRACT">
            <column name="TYPE_DEADLINE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="TYPE_DEADLINE_ID" baseTableName="CONTRACT"
                                 constraintName="FK_CONTRACT_ON_TYPE_DEADLINE" referencedColumnNames="ID"
                                 referencedTableName="CONTRACT_TYPE_DEADLINE"/>
    </changeSet>
    <changeSet id="14" author="peb">
        <createIndex indexName="IDX_COST_FOT_CONTRACT_STAGE" tableName="COST_FOT">
            <column name="CONTRACT_STAGE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CONTRACT_STAGE_ID" baseTableName="COST_FOT"
                                 constraintName="FK_COST_FOT_ON_CONTRACT_STAGE" referencedColumnNames="ID"
                                 referencedTableName="CONTRACT_STAGE"/>
    </changeSet>
    <changeSet id="15" author="peb">
        <createIndex indexName="IDX_USER__DEPARTMENT" tableName="USER_">
            <column name="DEPARTMENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="DEPARTMENT_ID" baseTableName="USER_"
                                 constraintName="FK_USER__ON_DEPARTMENT" referencedColumnNames="ID"
                                 referencedTableName="DEPARTMENT"/>
    </changeSet>
    <changeSet id="16" author="peb">
        <dropColumn columnName="first_name" tableName="user_"/>

        <dropColumn columnName="last_name" tableName="user_"/>

        <dropColumn columnName="time_zone_id" tableName="user_"/>

        <dropColumn columnName="version" tableName="user_"/>
    </changeSet>
</databaseChangeLog>